                                    {{/if}}
                                    <h2>STRK</h2><h3>{{this.streak}}</h3>
                                </div>
                            </div>
                        {{/each}}
                    </div>

                    <div class="al-teams">
                        {{#each al.east}}
                            <div class="team">
                                <img class="team-img" src="assets/img/teams/{{this.team_abbrv}}.png" />
                                <h1 class="team-name">{{this.disp_name}}</h1>
                                <div class="team-stats">
