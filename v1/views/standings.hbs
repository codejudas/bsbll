        <link rel="stylesheet" type="text/css" href="assets/css/global.css" />
        <link rel="stylesheet" type="text/css" href="assets/css/navbar.css" />
        <link rel="stylesheet" type="text/css" href="assets/css/standings.css" />
        <!--[if !IE]><!-->
        <script language="javascript" type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
        <!--<![endif]-->
        <!--[if IE]>
            <script language="javascript" type="text/javascript" src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
        <![endif]-->
        <script language="javascript" type="text/javascript" src="assets/js/nav-script.js"></script>
        <script language="javascript" type="text/javascript" src="assets/js/standings-script.js"></script>
    </head>
    <body>
        <div class="nav">
            <img id="mlb-icon" src="assets/img/mlb.png" />
            <div id="nav-selector"></div>
            <div class="nav-entry"><p>News</p></div>
            <div class="nav-entry"><p>Scoreboard</p></div>
            <div class="nav-entry nav-selected"><p>Standings</p></div>
            <div class="nav-entry"><p>Teams</p></div>
            <img id="nav-search-icon" src="assets/img/search-flipped.png" />
            <div id="nav-border"></div>
        </div>
        <div id="search-container">
            <div id="search-overlay"></div>
            <div class="search-modal modal-hidden">
                <img id="search-modal-icon" src="assets/img/search-flipped.png" />
                <input type="text" placeholder="Search the mlb" id="search-input"/>
            </div>
        </div>
        <div class="content">
            <img id="nl-icon" src="assets/img/national-league.png" />
            <img id="al-icon" src="assets/img/american-league.png" />
            <div id="division-toggle">
                <img class="mode-arrow left-arrow" src="assets/img/down-arrow-gray.png">
                <h1 id="division-text">DIVISION</h1>
                <h1 id="wildcard-text">WILD CARD</h1>
                <img class="mode-arrow right-arrow" src="assets/img/down-arrow-gray.png">
                <h2 class="div-button div-selected">WEST</h2>
                <h2 class="div-button">CENTRAL</h2>
                <h2 class="div-button">EAST</h2>
                <div id="division-selector" class="west"></div>
            </div>
            <div id="standings-container">
                <div id="rankings">
                    <div class="ranking-circle">1</div>
                    <div class="ranking-circle">2</div>
                    <div class="ranking-circle">3</div>
                    <div class="ranking-circle">4</div>
                    <div class="ranking-circle">5</div>
                    <!-- Wildcard rankings only -->
                    <div class="ranking-circle">6</div>
                    <div class="ranking-circle">7</div>
                    <div class="ranking-circle">8</div>
                    <div class="ranking-circle">9</div>
                    <div class="ranking-circle">10</div>
                    <div class="ranking-circle">11</div>
                    <div class="ranking-circle">12</div>
                </div>
                <div id="west-rankings" class="team-rankings active">
                    <div class="nl-teams">
                        {{#each nl.west}}
                            <div class="team">
                                <img class="team-img" src="assets/img/teams/{{this.team_abbrv}}.png" />
                                <h1 class="team-name">{{this.disp_name}}</h1>
                                <div class="team-stats">
                                    <h2>W</h2><h3>{{this.won}}</h3>
                                    <h2>L</h2><h3>{{this.lost}}</h3>
                                    <h2>PCT</h2><h3>{{this.win_percent}}</h3>
                                    <h2>GB</h2>
                                    {{#if this.games_back}}
                                        <h3>{{this.games_back}}</h3>
                                    {{else}}
                                        <h3>---</h3>
                                    {{/if}}
                                    <h2>STRK</h2><h3>{{this.streak}}</h3>
                                </div>
                            </div>
                        {{/each}}
                    </div>

                    <div class="al-teams">
                        {{#each al.west}}
                            <div class="team">
                                <img class="team-img" src="assets/img/teams/{{this.team_abbrv}}.png" />
